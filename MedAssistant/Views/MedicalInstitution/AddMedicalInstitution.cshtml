@model MedicalInstitutionModel

@{
    ViewData["Title"] = "Add MedicalInstitution";
}

<div>
    <h1>Add Medecine</h1>

    <form asp-controller="MedicalInstitution" asp-action="AddMedicalInstitution" method="post">


        <div class="mb-3">
            <label asp-for="Name" >Name</label>
            <input asp-for="Name" type="text" id="Name" required>
            <span asp-validation-for="Name" class="text-danger"></span> 
        </div>


        <div class="mb-3">
           <label asp-for="Location" >location of medical institution</label>
            <input asp-for="Location" type="text"   id="Location">
            <span asp-validation-for="Location" class="text-danger"></span>
        </div> 

        <div class="mb-3">
           <label asp-for="InfoUrl" >location of medical institution</label>
            <input asp-for="InfoUrl" type="text"   id="InfoUrl">
            <span asp-validation-for="InfoUrl" class="text-danger"></span>
        </div> 

          <input type="submit" class="btn btn-primary" value="Submit">
    </form>
         
       
   
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}