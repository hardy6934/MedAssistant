@model  List<DoctorTypeModel>

@{
    ViewData["Title"] = "Doctor Types";
}

<div>
    <h1>All Doctor Types</h1>
     
   <a class="btn btn-primary" asp-area="" asp-controller="DoctorType" asp-action="AddDoctorType">Add doctor type</a>
     
     @foreach(var n in Model)
     { 
            <div style= "border:solid 1px " class ="vaccination-preview">

                <div >  
                    <label asp-for="@n.Type">Doctor Type</label> <br/>
                    <label asp-for = "@n.Type" >@n.Type</label>
                </div>
                  
                
                <a class="btn btn-primary" asp-area="" asp-controller="DoctorType" asp-action="UpdateDoctorType" asp-route-id = "@n.Id">Update doctor type</a>
                <a class="btn btn-primary" asp-area="" asp-controller="DoctorType" asp-action="RemoveDoctorType" asp-route-id = "@n.Id">Remove doctor type</a>
           </div> 
       
     }     
     
 </div>

 
   
    