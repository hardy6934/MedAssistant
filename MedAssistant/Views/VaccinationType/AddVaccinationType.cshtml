@model VaccinationTypeModel

@{
    ViewData["Title"] = "Add Vaccination Type";
}

<div>
    <h1>Add Medecine</h1>

    <form asp-controller="VaccinationType" asp-action="AddVaccinationType" method="post">


        <div class="mb-3">
            <label asp-for="Type" >Vaccination Type</label><br/>
            <input asp-for="Type" type="text" id="Type" required>
            <span asp-validation-for="Type" class="text-danger"></span> 
        </div>


        <div class="mb-3">
           <label asp-for="Description" >Description of Vaccination Type</label><br/>
            <textarea asp-for="Description" data-val-maxlength-max="5000" id="Description"><</textarea>/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div> 

         

          <input type="submit" class="btn btn-primary" value="Submit">
    </form>
         
       
   
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}