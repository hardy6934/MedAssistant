@model VaccinationTypeModel

@{
    ViewData["Title"] = "Update Vaccination Type";
}

<div>
    <h1>Update Vaccination Type</h1>

     <form asp-controller="VaccinationType" asp-action="UpdateVaccinationType" method="post">

        <div class="mb-3">
            <label asp-for="Type" >Vaccination Type</label>
            <input asp-for="Type" type="text" id="Type" required>
            <span asp-validation-for="Type" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Description" >Location of medical institution</label>
            <input asp-for="Description" type="text"   id="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
         

        <input type="submit" class="btn btn-primary" value="Submit">
  
    </form>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}