@model CreatePrescriptionModel

@{
    ViewData["Title"] = "Update Prescription";
}

<div>
    <h1>Edit User</h1>

    <form asp-controller="Prescription" asp-action="EditPrescription" method="post">

        <div class="mb-3">
            <label asp-for="Dosage" class="form-label">Dosage of Prescription</label><br/>
            <input asp-for="Dosage"  type="text"  id="Dosage" required>
            <span asp-validation-for="Dosage" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Bought" >Bought</label><br/>
            <input asp-for="Bought"  type="checkbox" id="Bought">
            <span asp-validation-for="Bought" class="text-danger"></span>
        </div>  

        
        <div class="mb-3">
            <label asp-for="MedicineName" >Name of Medecine</label><br/>
            <input asp-for="MedicineName" id="medecineName" type = "text" placeholder = "Start writing" />
        </div>

         
         

        <input type="submit" class="btn btn-primary" value="Submit">

    </form>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
 

         <script >
          $( function() {
            $( "#medecineName" ).autocomplete({
              source: 'AutocompleteSearchMedecines'
            });
          } );
      </script>

}