 @model CreateDoctorModel

@{
    ViewData["Title"] = "Update Doctor";
}

<div>
    <h1>Create Doctor</h1>

    <form asp-controller="Doctor" asp-action="UpdateDoctor" method="post">

        <div class="mb-3">
            <label asp-for="FullName" >Full Name</label><br/>
            <input asp-for="FullName" type="text" id="FullName" required>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" >Phone Number</label><br/>
            <input asp-for="PhoneNumber" type="text" id="PhoneNumber" required>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <select asp-for="DoctorTypeId" ><br/>
                 <option selected="selected" disabled = "disabled">Select doctor's type</option>
                @foreach(var n in Model.ListOfDoctorTypes)
                {
                    <option  value="@n.Value">@n.Text </option> 
                }
            </select>
        </div>
        <div class="mb-3">
            <select asp-for="MedicalInstitutionId" ><br/>
                 <option selected="selected" disabled = "disabled">Select medical institution</option>
                @foreach(var n in Model.ListOfMedicalInstitutionName)
                {
                    <option  value="@n.Value">@n.Text </option> 
                }
            </select>
        </div>  

        <input type="submit" class="btn btn-primary" value="Submit">
 

    </form>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}