@model  List<NoteTypeModel>

@{
    ViewData["Title"] = "Note Types";
}

<div>
    <h1>All Note Types</h1>
     
   <a class="btn btn-primary" asp-area="" asp-controller="NoteType" asp-action="AddNoteType">Add Note type</a>
     
     @foreach(var n in Model)
     { 
            <div style= "border:solid 1px " class ="vaccination-preview">

                <div >  
                    <label asp-for="@n.Type">Note Type</label> <br/>
                    <label asp-for = "@n.Type" >@n.Type</label>
                </div>
                  
                
                <a class="btn btn-primary" asp-area="" asp-controller="NoteType" asp-action="UpdateNoteType" asp-route-id = "@n.Id">Update Note type</a>
                <a class="btn btn-primary" asp-area="" asp-controller="NoteType" asp-action="RemoveNoteType" asp-route-id = "@n.Id">Remove Note type</a>
           </div> 
       
     }     
     
 </div>

 
   
    